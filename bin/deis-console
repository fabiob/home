#!/bin/bash
set -e

function erro() { echo $@; exit 1; }

host="$DEISCTL_TUNNEL"
cmd=()

CURLOPTS=-s

while [[ $# > 0 ]]; do
  v="$1"
  case "$v" in
    '-a')
      app=$2
      shift
      ;;
    '-h')
      host=$2
      shift
      ;;
    '-v')
      CURLOPTS=-v
      set -x
      ;;
    *)
      cmd=( "${cmd[@]}" "$v" )
      ;;
  esac
  shift
done

[[ ${#cmd[@]} == 0 ]] && cmd=( "sh" )

profile="$DEIS_PROFILE"
f="${HOME}/.deis/${profile}.json"

[[ -f $f ]] && [[ -r $f ]] || erro "O arquivo $f não existe ou não está acessível"

url=$( underscore --outfmt text extract controller < "$f" || erro "Não foi possível extrair o controller do perfil: $profile" )
token=$( underscore --outfmt text extract token < "$f" || erro "Não foi possível extrair o token do perfil: $profile" )

json=$( curl --fail $CURLOPTS -H "Authorization: token $token" $url/v1/apps/${app}/containers || erro "Não foi possível obter a lista de containers: curl retornou $?" )

version=$( echo $json | underscore extract --outfmt text 'results.0.release' || erro "Não foi possível obter o identificador do último release" )

args=`printf '%q ' "${cmd[@]}"`
exec ssh -t core@${host} "bash -c 'img=\$(etcdctl get deis/registry/host):\$(etcdctl get deis/registry/port)/${app}:${version}; set -x; docker run -it --rm \${img} ""${args}""'"
